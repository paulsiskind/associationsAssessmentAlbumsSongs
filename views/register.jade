extends layout

block content


  h1.well Please Register
  br
  br
  include error

  form(action='/register', method='post')
   .form-group
   .col-md-8
    label Email
    input.form-control(type='email' name='email')
    br
   .form-group
   .col-md-6
    label Password
    input.form-control(type='password' name='password')
    br
   .form-group
   .col-md-6
    label Password Confirmation
    input.form-control(type='password' name='confirmation')
    br
   .form-group
   .col-md-12
    Button(type='submit' class='btn btn-success') Submit


